@model IEnumerable<AMWP.Models.Currencies>

@{
    ViewBag.Title = "其他資料管理";
}
<hr />
<h3 class="alert alert-info text-center">交易幣別 </h3>

<div class="row">
    <h4 class="col-md-9 text-right text-danger">@TempData["ForeignKey"]</h4>
    <div class="col-md-3 text-right mb-3">
        @Html.ActionLink("新增幣別", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>
<table class="table table-striped table-hover text-center">
    <thead class="thead-dark">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CCYID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExchRate)
            </th>
            <th>資料管理</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CCYID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExchRate)
                </td>
                <td>
                    @Html.ActionLink("修改", "Edit", new { id = item.CCYID }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("刪除", "Delete", new { id = item.CCYID }, new { @class = "btn btn-danger", onclick = "return confirm('您確定要刪除「" + item.Name + "」的交易幣別嗎？')" })
                </td>
            </tr>
        }
    </tbody>
</table>


@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #e3f5b8;
            border-color: #bee5eb;
        }
    </style>
}