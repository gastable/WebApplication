@model IEnumerable<AMWP.Models.Cash>

@{
    ViewBag.Title = "會員資產管理";
}
<hr />
<h3 class="alert alert-info text-center">會員現金列表</h3>

@*<p class="text-right">
    @Html.ActionLink("新增現金", "Create")
</p>*@
<table class="table table-striped table-hover text-center">
    <thead class="thead-dark">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Members.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CCYID)
            </th>

            @*<th>資料管理</th>*@
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Members.Account)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currencies.Name)
                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SSN }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SSN }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SSN })
                </td>*@
            </tr>
        }
    </tbody>
</table>


@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #f6b0e8;
            border-color: #bee5eb;
        }
    </style>
}