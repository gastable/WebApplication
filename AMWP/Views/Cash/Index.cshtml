@model IEnumerable<AMWP.Models.Cash>

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-info text-center">Index</h2>

<p class="text-right">
    @Html.ActionLink("新增現金", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Currencies.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Members.Account)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currencies.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Members.Account)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SSN }) |
                @Html.ActionLink("Details", "Details", new { id = item.SSN }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SSN })
            </td>
        </tr>
    }

</table>


@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #efeea4;
            border-color: #bee5eb;
        }
    </style>
}