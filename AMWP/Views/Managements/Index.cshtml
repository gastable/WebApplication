@model IEnumerable<AMWP.Models.Managements>

@{
    ViewBag.Title = "會員管理";
}
<hr />
<h3 class="alert alert-info text-center">會員帳號管理</h3>

<p class="text-right">
    @Html.ActionLink("新增處理紀錄", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Members.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admins.Account)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Members.Account)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admins.Account)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SSN }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SSN }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SSN })
                </td>
            </tr>
        }
    </tbody>
</table>


@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #acf2d4;
            border-color: #bee5eb;
        }
    </style>
}
