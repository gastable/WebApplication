@model IEnumerable<AMWP.Models.Countries>

@{
    ViewBag.Title = "其他資料管理";
}
<hr />
<h3 class="alert alert-info text-center">註冊國家</h3>

<div class="row">
    <h4 class="col-md-9 text-right text-danger">@TempData["ForeignKey"]</h4>
    <div class="col-md-3 text-right mb-3">
        @Html.ActionLink("新增註冊國家", "Create", null, new { @class = "btn btn-primary",id="btnCreate" })
    </div>
</div>
<table class="table table-striped table-hover text-center">
    <thead class="thead-dark">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>資料管理</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("修改", "Edit", new { id = item.CountryID }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("刪除", "Delete", new { id = item.CountryID }, new { @class = "btn btn-danger", onclick = "return confirm('您確定要刪除「" + item.Name + "」的註冊國家嗎？')" })
                </td>
            </tr>
        }
    </tbody>
</table>


@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #e3f5b8;
            border-color: #bee5eb;
        }

        #btnCreate {
            position: fixed;
            top: 95px;
            right: 450px;
        }
    </style>
}

@section scripts{
    <script>
        $('#navbar .nav-item').removeClass('active');
        $('#navItem6').addClass('active');

    </script>

}