@using System.Data;
@model System.Data.DataTable
@{
    int memberID = 24;
    string CCY = "USD";
    double sumCost = 0;
    double sumPV = 0;
    foreach (DataRow row in Model.Rows)
    {
        sumCost += (Math.Round(Convert.ToDouble(row["AvgCost"]) * Convert.ToDouble(row["Share"]) * Convert.ToDouble(row["ExchRate"]) * Convert.ToDouble(row["ToCCY"]), 2));
        sumPV += (Math.Round(Convert.ToDouble(row["Close"]) * Convert.ToDouble(row["Share"]) * Convert.ToDouble(row["ExchRate"]) * Convert.ToDouble(row["ToCCY"]), 2));

    }

    Session["secSum"] = sumPV;
    if (Session["mem"] != null)
    {
        memberID = Convert.ToInt32(Session["mem"]);
        CCY = Convert.ToString(Session["CCY"]);
    };

}
<h4 class="text-center">證券庫存</h4>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                證券代號
            </th>
            <th>
                股數
            </th>
            <th>
                成本
            </th>
            <th>
                市價
            </th>
            <th>
                未實現盈虧
            </th>
            <th>
                報酬率
            </th>
            <th>
                現值(@Html.Raw(CCY))
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>
                    <a class="btn btn-@row["TypeID"] btn-sm" href="@Url.Action("Display", "Performance", new { id = Session["mem"] != null ? Session["mem"] :memberID,symbol =@row["Symbol"] })">@row["Symbol"]</a>
                </td>
                <td>
                    @Math.Round(Convert.ToDouble(row["Share"]), 2)
                </td>
                <td>
                    @Math.Round(Convert.ToDouble(row["AvgCost"]), 2)
                </td>
                <td>
                    @Math.Round(Convert.ToDouble(row["Close"]), 2)
                </td>
                <td>
                    @(Math.Round(((Convert.ToDouble(row["Close"])-Convert.ToDouble(row["AvgCost"]))* Convert.ToDouble(row["Share"])), 2))
                </td>
                <td>
                    @(Math.Round((((Convert.ToDouble(row["Close"])-Convert.ToDouble(row["AvgCost"]))* Convert.ToDouble(row["Share"]))/(Convert.ToDouble(row["AvgCost"])* Convert.ToDouble(row["Share"])))*100, 2)) %
                </td>
                <td>
                    @(Math.Round(Convert.ToDouble(row["Close"])*Convert.ToDouble(row["Share"])*Convert.ToDouble(row["ExchRate"])*Convert.ToDouble(row["ToCCY"]),2))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>
                <strong>
                    總計
                </strong>
            </td>
            <td>
            </td>
            <td>
                @sumCost
            </td>
            <td>
            </td>
            <td>
                @Math.Round((sumPV - sumCost),2)
            </td>
            <td>
                @(Math.Round((sumPV - sumCost)/ sumCost*100,2)) %
            </td>
            <td>               
                @sumPV
            </td>
        </tr>
    </tfoot>

</table>



