@model IEnumerable<AMWP.Models.Properties>

@{
    ViewBag.Title = "會員資產管理";
}
<hr />
<h3 class="alert alert-info text-center">會員房產列表</h3>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-striped table-hover text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Members.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Principal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CCYID)
            </th>

            @*<th>資料管理</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Members.Account)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Term)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Principal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CCYID)
                </td>

                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SSN }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SSN }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SSN })
                </td>*@
            </tr>
        }
    </tbody>
</table>


@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #f6b0e8;
