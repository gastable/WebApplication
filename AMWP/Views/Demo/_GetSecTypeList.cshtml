@using System.Data;
@model System.Data.DataTable
@{
    int memberID = 24;
    string CCY = "USD";
    

}
<table class="table table-sm text-center">
    <thead class="thead">
        <tr>
            <th>
                類別
            </th>

            <th>
                現值(@CCY)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>
                    <a class="btn btn-@row["TypeID"] btn-sm " href="@Url.Action("MemberIndex", "Securities", new {sectype=row["TypeID"]})">@row["Name"]</a>
                </td>

                <td class="align-middle">
                    @(Math.Round(Convert.ToDouble(row["Value"]),2))
                </td>
            </tr>
        }
    </tbody>
</table>

