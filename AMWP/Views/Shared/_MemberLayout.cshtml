<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("CSS", false)
    @RenderSection("dashboardCSS", false)
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="#">會員資產管理</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @*<div class="text-right">
            <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
        </div>*@
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="#">Sign out</a>
            </li>
        </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active h6" href="@Url.Action("Dashboard", new {id=1})">
                                <i class="bi bi-graph-up-arrow"></i>
                                資產儀表板
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link h6" href="#">
                                <i class="bi bi-bank"></i>
                                證券資產
                            </a>
                        </li>
                        <li class="nav-item h6">
                            <a class="nav-link" href="#">
                                <i class="bi bi-coin"></i>
                                現金
                            </a>
                        </li>
                        <li class="nav-item h6">
                            <a class="nav-link" href="#">
                                <i class="bi bi-houses"></i>
                                房產與貸款
                            </a>
                        </li>
                        <li class="nav-item h6">
                            <a class="nav-link" href="#">
                                <i class="bi bi-bar-chart-line"></i>
                                投資組合比較
                            </a>
                        </li>
                        <li class="nav-item h6">
                            <a class="nav-link" href="#">
                                <i class="bi bi-calculator"></i>
                                財務目標分析
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span class="h6"><i class="bi bi-person-gear"></i>帳號管理</span>
                        <a class="d-flex align-items-center text-muted" href="#" aria-label="Add a new report">
                           
                        </a>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Current month
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Last quarter
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Social engagement
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Year-end sale
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="col-md-9 ml-sm-auto col-lg-10 px-md-5">
                @RenderBody()
                <hr />
                <footer>
                    <p>Copyright &copy; @DateTime.Now.Year - MY資產管理顧問股份有限公司</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
    @RenderSection("dashboradJS", required: false)
    <script>
        $('#sidebarMenu a').click(function (evt) {
            //active = evt.target;
            $('#sidebarMenu a').removeClass('active');
            $(evt.target).addClass('active');

        });
    </script>
</body>

</html>
