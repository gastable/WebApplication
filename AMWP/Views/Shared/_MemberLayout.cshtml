<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
<link href="~/Content/AMWP.css" rel="stylesheet" />
    @RenderSection("CSS", false)
    @{
        int DemoID = 24;
    }
    <style>
        body {
            padding-top: 50px;
            padding-bottom: 20px;
        }
    </style>


    <link href="~/Content/dashboard.css" rel="stylesheet" />
    @RenderSection("dashboardCSS", false)

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top flex-md-nowrap py-1 shadow">
        <a class="navbar-brand col-md-2 col-lg-1 mr-0 px-3" href="/Home/Index">會員資產管理</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="text-right">
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="搜尋證券" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <ul class="navbar-nav px-3">
            @if (Session["mem"] != null)
            {
                <li class="nav-item text-nowrap">
                    <a class="nav-link" href="/MemberLogin/Logout">登出</a>
                </li>
            }
            else
            {
                <li class="nav-item text-nowrap">
                    <a class="nav-link" href="/MemberLogin/Login">登入</a>
                </li>
            }
        </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active h6" id="navLink1" href="@Url.Action("Dashboard", "Dashboard", new { id = Session["mem"]!=null? Session["mem"]:DemoID,ccy=Session["CCY"]!=null? Session["CCY"]:"USD" })">
                                <i class="bi bi-graph-up-arrow"></i>
                                資產儀表板
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link h6" id="navLink2" href="@Url.Action("DisplaySecOrders","MemberSecurities", new { id = Session["mem"]!=null? Session["mem"]:DemoID,ccy=Session["CCY"]!=null? Session["CCY"]:"USD" })">
                                <i class="bi bi-bank"></i>
                                證券資產
                            </a>
                        </li>
                        <li class="nav-item h6">
                            <a class="nav-link" id="navLink3" href="@Url.Action("Display","MemberCash",new { id = Session["mem"]!=null? Session["mem"]:DemoID,ccy=Session["CCY"]!=null? Session["CCY"]:"USD" })">
                                <i class="bi bi-coin"></i>
                                現金
                            </a>
                        </li>
                        <li class="nav-item h6">
                            <a class="nav-link" id="navLink4" href="@Url.Action("Display","MemberProperties",new { id = Session["mem"]!=null? Session["mem"]:DemoID,ccy=Session["CCY"]!=null? Session["CCY"]:"USD" })">
                                <i class="bi bi-houses"></i>
                                房產與貸款
                            </a>
                        </li>
                        <li class="nav-item h6">
                            <a class="nav-link" id="navLink5" href="@Url.Action("Input", "Backtest",new { id = Session["mem"]!=null? Session["mem"]:DemoID,ccy=Session["CCY"]!=null? Session["CCY"]:"USD" })">
                                <i class="bi bi-bar-chart-line"></i>
                                投資組合回測
                            </a>
                        </li>
                        <li class="nav-item h6">
                            <a class="nav-link" id="navLink6" href="#">
                                <i class="bi bi-calculator"></i>
                                財務目標分析
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span class="h6"><i class="bi bi-person-gear"></i>帳號管理</span>

                    </h6>
                    <ul class="nav flex-column mb-2 h6">
                        @if (Session["mem"] == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/MemberLogin/Login">
                                    <span data-feather="file-text"></span>
                                    <i class="bi bi-box-arrow-in-right"></i>登入會員帳號
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#">

                                    Last quarter
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">

                                    Social engagement
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/MemberLogin/Logout">
                                    <i class="bi bi-box-arrow-left"></i>
                                    登出
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
            <div class="col-md-9 ml-sm-auto col-lg-10 px-md-5 py-md-2">
                @RenderBody()
                <hr />
                <footer>
                    <p class="text-center">Copyright &copy; @DateTime.Now.Year - MY資產管理顧問股份有限公司</p>
                </footer>
            </div>
        </div>
    </div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-datalabels/2.2.0/chartjs-plugin-datalabels.min.js" integrity="sha512-JPcRR8yFa8mmCsfrw4TNte1ZvF1e3+1SdGMslZvmrzDYxS69J7J49vkFL8u6u8PlPJK+H3voElBtUCzaXj+6ig==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/Scripts/AMWP.js"></script>
    
    @RenderSection("scripts", required: false)
</body>

</html>
    

