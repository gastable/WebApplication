@model AMWP.Models.SecOrders




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form">
        <h4 class="text-center">修改交易明細</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SSN)

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.MemID, "MemID", htmlAttributes: new { @class = "control-label" })
            <div class="col">
                @Html.DropDownList("MemID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MemID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.SecID, "證券代號", htmlAttributes: new { @class = "col-form-label col-sm-4 text-right"})
            <div class="col-sm-8">
                @Html.DropDownList("SecID", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.SecID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-4 float-sm-left pt-0 text-right" for="radioLabel">交易類型</label>
            <div class="col-sm-8">
                <div class="form-check form-check-inline" id="radioLabel">
                    @Html.RadioButtonFor(model => model.TrancType, "true", new { @class = "form-check-input", id = "radioBuy" })
                    @Html.LabelFor(model => model.TrancType, "買", htmlAttributes: new { @class = "form-check-label", @for = "radioBuy" })
                </div>
                <div class="form-check form-check-inline" id="">
                    @Html.RadioButtonFor(model => model.TrancType, "false", new { @class = "form-check-input", id = "radioSell" })
                    @Html.LabelFor(model => model.TrancType, "賣", htmlAttributes: new { @class = "form-check-label", @for = "radioSell" })
                </div>
                @Html.ValidationMessageFor(model => model.TrancType, "", new { @class = "text-danger" })
            </div>
            
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "col-form-label col-sm-4 text-right" })
            <div class="col-sm-8">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Share, htmlAttributes: new { @class = "col-form-label col-sm-4 text-right" })
            <div class="col-sm-8">
                @Html.EditorFor(model => model.Share, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Share, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "col-form-label col-sm-4 text-right" })
            <div class="col-sm-8">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Fee, htmlAttributes: new { @class = "col-form-label col-sm-4 text-right" })
            <div class="col">
                @Html.EditorFor(model => model.Fee, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12 text-right">
                <input type="submit" value="確定" class="btn btn-success" />
            </div>
        </div>
    </div>
}

