@model IEnumerable<AMWP.Models.SecOrders>

@{
    ViewBag.Title = "會員資產管理";
}
<hr />
<h3 class="alert alert-info text-center">會員證券交易列表</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Members.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrancType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Securities.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Share)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Members.Account)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.TrancType)*@
                    @if (@item.TrancType)
                    {
                        <span class="text-success">買進</span>
                    }
                    else
                    {
                        <span class="text-danger">賣出</span>

                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Securities.Symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Share)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SSN }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SSN }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SSN })
                </td>
            </tr>
        }
    </tbody>
</table>


@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #eee1a0;
            border-color: #bee5eb;
        }
    </style>
}
