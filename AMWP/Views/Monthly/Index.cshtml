}

@section scripts{
    <script>
        $('#navbar .nav-item').removeClass('active');
        $('#navItem5').addClass('active');

        var orderStr = "@ViewBag.Order";
        $('.text-warning').removeClass("text-warning").addClass("text-light");
        $('.@ViewBag.Order').removeClass("text-light").addClass("text-warning");

    </script>

}