@if (ViewBag.PageCount != null)
{
    if (ViewBag.PageCount > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                @if (ViewBag.PageCount <= 10)
                {
                    <li class="page-item">
                        <a class="page-link" href=@Url.Action("Index", new {page=ViewBag.PageNumber-1,order=orderStr})>
                            <span>&laquo;</span>
                        </a>
                    </li>
                    for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        string active = ViewBag.PageNumber == i ? "active page-item" : "page-item";
                        <li class="@active"><a class="page-link" href=@Url.Action("Index", new {page=i,order=orderStr})>@i</a></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href=@Url.Action("Index", new {page=ViewBag.PageNumber+1,order=orderStr})>
                            <span>&raquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    if ((ViewBag.PageNumber - 5) >= 2)
                    {
                        <li class="page-item">
                            <a class="page-link" href=@Url.Action("Index", new {page=1,order=orderStr})>
                                <span>&laquo;&laquo;</span>
                            </a>
                        </li>
                    }
                    if (ViewBag.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href=@Url.Action("Index", new {page=ViewBag.PageNumber-1,order=orderStr})>
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    if (ViewBag.PageNumber >= 7)
                    {
                        <li class="page-item">
                            <a class="page-link">
                                <span>...</span>
                            </a>
                        </li>
                    }
                    if ((ViewBag.PageNumber - 5) <= 0)
                    {
                        for (int i = 1; i <= 10; i++)
                        {
                            string active = ViewBag.PageNumber == i ? "active page-item" : "page-item";
                            <li class="@active"><a class="page-link" href=@Url.Action("Index", new {page=i,order=orderStr})>@i</a></li>
                        }
                    }
                    if ((ViewBag.PageNumber - 5) > 0 && (ViewBag.PageCount - ViewBag.PageNumber) >= 4)
                    {
                        for (int i = (ViewBag.PageNumber - 5); i <= ViewBag.PageNumber + 4; i++)
                        {
                            string active = ViewBag.PageNumber == i ? "active page-item" : "page-item";
                            <li class="@active"><a class="page-link" href=@Url.Action("Index", new {page=i,order=orderStr})>@i</a></li>
                        }
                    }
                    if ((ViewBag.PageNumber - 5) > 0 && (ViewBag.PageCount - ViewBag.PageNumber) < 4)
                    {
                        for (int i = ViewBag.PageCount - 9; i <= ViewBag.PageCount; i++)
                        {
                            string active = ViewBag.PageNumber == i ? "active page-item" : "page-item";
                            <li class="@active"><a class="page-link" href=@Url.Action("Index", new {page=i,order=orderStr})>@i</a></li>
                        }
                    }
                    if (ViewBag.PageNumber < ViewBag.PageCount - 4)
                    {
                        <li class="page-item">
                            <a class="page-link">
                                <span> ...</span>
                            </a>
                        </li>
                    }
                    if (ViewBag.PageNumber < ViewBag.PageCount)
                    {
                        <li class="page-item">
                            <a class="page-link" href=@Url.Action("Index", new { page = ViewBag.PageNumber + 1, order = orderStr })>
                                <span> &raquo;</span>
                            </a>
                        </li>
                    }
                    if ((ViewBag.PageCount - ViewBag.PageNumber) >= 2 && (ViewBag.PageCount - ViewBag.PageNumber > 4))
                    {
                        <li class="page-item">
                            <a class="page-link" href=@Url.Action("Index", new { page = ViewBag.PageCount, order = orderStr })>
                                <span> &raquo; &raquo;</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </nav>
    }
}
@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #a9f6f6;
            border-color: #bee5eb;
        }

        .btn-order {
            margin: -10px;
        }
