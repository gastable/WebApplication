@model IEnumerable<AMWP.Models.Securities>

@{
    ViewBag.Title = "Index";
}

<h2  class="alert alert-info text-center">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Symbol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Countries.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Currencies.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecTypes.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Countries.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currencies.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecTypes.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SecID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SecID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SecID })
            </td>
        </tr>
    }

</table>


@section CSS{
    <style>
        .alert-info {
            color: #0c5460;
            background-color: #efeea4;
            border-color: #bee5eb;
        }
    </style>
}
