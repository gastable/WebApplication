@model _02View.Models.NightMarket

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form method="post" action="/Home/Create">
    <p>
        <label for="Id" class="control-label">夜市編號</label>
        <input id="Id" type="text" class="form-control" name="Id" required value="@ViewBag.Id"/>
    </p>
    <p>
        <label for="Name" class="control-label">夜市名稱</label>
        <input id="Name" type="text" class="form-control" name="Name" required value="@ViewBag.Name"/>
    </p>
    <p>
        <label for="Address" class="control-label">夜市住址</label>
        <input id="Address" type="text" class="form-control" name="Address" required value="@ViewBag.Address"/>
    </p>
    <p>
        <input id="Submit1" type="submit" value="送出" class="btn btn-success" />
    </p>
</form>
<hr />
@using (Html.BeginForm())
{
    <p>
        @Html.LabelFor(model => model.Id)
        @Html.TextBoxFor(model => model.Id, new { @class = "form-control", required="required" })@*因為class是C#的保留字，所以要多加@來做溢出字元*@
    </p>
    <p>
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </p>
    <p>
        @Html.LabelFor(model => model.Address)
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
    </p>
    <p>
        <input id="Submit1" type="submit" value="送出" class="btn btn-success" />
    </p>
}

<hr />
@Html.Raw(ViewBag.Result)