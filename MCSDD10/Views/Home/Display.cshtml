@model MCSDD10.Models.Products

@{
    ViewBag.Title = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card border-info" href="@Url.Action("Display", new {id=Model.ProductID})">
    <div class="row">
        <div class="col-md-5">
            <img src="@Url.Action("GetImage","Products", new {id=Model.ProductID})" class="img-thumbnail m-3" />

        </div>
        <div class="col-md-7">
            <div class="card-body">
                <h5><strong class="text-primary">@Model.ProductName</strong></h5>
                <p>
                    @Html.Raw(Model.Description.ToString().Replace("\n", "<br>"))
                </p>
                <p class="text-black-50 text-right"><span style="text-decoration:line-through">原價:@(Model.UnitPrice*5)</span></p>
                <h4 class="text-danger text-right">
                    <strong>
                        @Html.DisplayFor(modelItem => Model.UnitPrice)
                    </strong>
                </h4>
                <h1 class="text-right">
                    <i class="bi bi-bag-heart text-danger" data-toggle="tooltip" data-placement="bottom" title="追踨商品"></i>
                    <i class="bi bi-cart4 text-primary" data-toggle="tooltip" data-placement="bottom" title="加入購物車"></i>
                    <i class="bi bi-cash-coin text-success" data-toggle="tooltip" data-placement="bottom" title="直接購買"></i>
                </h1>
            </div>
        </div>
    </div>

</div>
<div class="text-right mt-3">
    <a class="btn btn-primary" href="@Url.Action("Index")">
        <i class="bi bi-reply-fill"></i>返回商品列表
    </a>
</div>

@section scripts{
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}